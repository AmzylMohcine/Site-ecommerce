{% extends "base.html.twig" %}

{% block title %}
	Mes Commandes
{% endblock %}

{% block body %}

	<h1>
		Mes commandes
	</h1>

	<table class="table">

		<thead>
			<tr>
				<th>Numéro</th>
				<th>
					Adrésse de livraison
				</th>
				<th>
					Date de commande
				</th>
				<th>
					Produit
				</th>
				<th>
					Total
				</th>
			</tr>
		</thead>

		<tbody>

			{% for p in purchases %}

				<tr>
					<td>{{p.id}}</td>
					<td>{{p.adress}}
						<br>
						{{p.postaleCode}}
						,
						{{p.city}}
					</td>
					<td>{{p.purchasedAt | date('d/m/y H:i' )}}</td>
					<td>
						<ul>

							{% for item in p.purchaseItems %}
								<li>
									{{ item.quantity }}
									x
									{{ item.productName}}
									({{ item.productPrice / 100 }}&#8364;)

								</li>
							{% endfor %}

						</ul>
					</td>
					<td>
						{{ p.total /100 }}
						&#8364;</td>
				</tr>


			{% endfor %}

		</tbody>
	</table>
{% endblock %}
