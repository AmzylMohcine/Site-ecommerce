{% extends "base.html.twig" %}

{% block title %}
	{{product.name}}
{% endblock %}

{% block body %}

	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Acceuil</a>
		</li>
		<li class="breadcrumb-item active">{{product.name}}</li>
	</ol>
	<h1>
		{{product.name}}
		({{product.price / 100 }}&euro;  )
	</h1>


	<div class="row pt-4">
		<div class="col-2">
			<img class="img-fluid" src="{{product.picture}}" alt="image de {{product.name}} ">
		</div>
		<div class="col">
			<a href="{{ path ('product_category' , {'slug' : product.category.slug})}}">
				<span class="badge alert-primary">
					{{product.category.name}}
				</span>
			</a>
			<p>{{product.shortDescription}}
			</p>
			<a href="#" class="btn btn-success btn-lg">
				<i class="fas fa-shopping-cart"></i>
				Ajouter au panier
			</a>
		</div>

	</div>
{% endblock %}
