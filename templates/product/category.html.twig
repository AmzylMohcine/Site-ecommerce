{% extends "base.html.twig" %}

{% block title %}
	Catégories :
	{{category.name}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('homepage') }}">Acceuil</a>
		</li>
		<li class="breadcrumb-item">
			<a href="{{path('product_category' , {'slug' : category.slug})}}">{{category.name}}</a>
		</li>

	</ol>

	<h1>
		Catégorie :
		{{category.name}}
	</h1>

	<div class="row">
		{% for p in category.products %}

			<div class="col-4">
				{% include "product/_product_cart.html.twig" %}

			</div>

		{% endfor %}
	</div>
{% endblock %}
